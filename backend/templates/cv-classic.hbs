<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{profile.name}} - CV</title>
    <style>
        /* Reset and base styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }
        
        body {
            font-size: 12px;
            line-height: 1.5;
            color: #333;
            background: white;
            padding: 15px;
        }

        /* Typography */
        h1 {
            font-size: 24px;
            margin-bottom: 5px;
            color: {{themeColor}};
        }

        h2 {
            font-size: 14px;
            text-transform: uppercase;
            margin-bottom: 10px;
            border-bottom: 2px solid {{themeColor}};
            padding-bottom: 3px;
            color: {{themeColor}};
        }

        h3 {
            font-size: 13px;
            margin-bottom: 5px;
        }

        p {
            margin-bottom: 8px;
        }

        a {
            color: {{themeColor}};
            text-decoration: none;
        }

        /* Layout */
        .container {
            max-width: 100%;
            margin: 0 auto;
        }

        header {
            margin-bottom: 20px;
        }

        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
        }

        .profile-info {
            flex: 1;
        }

        .contact-info {
            text-align: right;
        }

        section {
            margin-bottom: 20px;
        }

        .section-item {
            margin-bottom: 15px;
        }

        .section-title {
            display: flex;
            justify-content: space-between;
            margin-bottom: 3px;
        }

        .item-duration {
            color: #666;
            font-style: italic;
            font-size: 11px;
        }

        .item-location {
            color: #666;
            font-style: italic;
            font-size: 11px;
        }

        .skills-container {
            display: flex;
            flex-wrap: wrap;
        }

        .skill-item {
            background: #f5f5f5;
            padding: 3px 8px;
            border-radius: 3px;
            margin-right: 8px;
            margin-bottom: 8px;
        }

        .skill-item.technical {
            background: #e6f3ff;
        }

        .skill-item.soft {
            background: #fff2e6;
        }

        .language-item {
            display: flex;
            align-items: center;
            margin-bottom: 5px;
        }

        .language-name {
            min-width: 100px;
        }

        .language-level {
            color: #666;
        }

        .bio {
            margin-bottom: 15px;
            line-height: 1.4;
        }

        .social-links a {
            margin-right: 10px;
        }

        .current {
            background-color: #f0f7ff;
            border-left: 2px solid {{themeColor}};
            padding-left: 8px;
        }

        .emphasis {
            font-weight: bold;
            color: #444;
        }

        .project-technologies {
            display: flex;
            flex-wrap: wrap;
            margin-top: 3px;
        }

        .tech-tag {
            background: #f0f0f0;
            padding: 2px 5px;
            border-radius: 3px;
            font-size: 10px;
            margin-right: 5px;
            margin-bottom: 3px;
        }

        footer {
            margin-top: 20px;
            text-align: center;
            font-size: 10px;
            color: #999;
            border-top: 1px solid #eee;
            padding-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <div class="header-content">
                <div class="profile-info">
                    <h1>{{profile.name}}</h1>
                    {{#if profile.headline}}
                    <p class="emphasis">{{profile.headline}}</p>
                    {{/if}}
                    {{#if profile.bio}}
                    <p class="bio">{{profile.bio}}</p>
                    {{/if}}
                </div>
                <div class="contact-info">
                    <p>{{profile.email}}</p>
                    {{#if profile.phone}}
                    <p>{{profile.phone}}</p>
                    {{/if}}
                    {{#if profile.location}}
                    <p>{{profile.location}}</p>
                    {{/if}}
                    {{#if profile.website}}
                    <p><a href="{{profile.website}}" target="_blank">{{profile.website}}</a></p>
                    {{/if}}
                </div>
            </div>
            <div class="social-links">
                {{#if profile.social.linkedin}}
                <a href="{{profile.social.linkedin}}" target="_blank">LinkedIn</a>
                {{/if}}
                {{#if profile.social.github}}
                <a href="{{profile.social.github}}" target="_blank">GitHub</a>
                {{/if}}
                {{#if profile.social.twitter}}
                <a href="{{profile.social.twitter}}" target="_blank">Twitter</a>
                {{/if}}
                {{#if profile.social.behance}}
                <a href="{{profile.social.behance}}" target="_blank">Behance</a>
                {{/if}}
                {{#if profile.social.dribbble}}
                <a href="{{profile.social.dribbble}}" target="_blank">Dribbble</a>
                {{/if}}
            </div>
        </header>

        {{#if experience.length}}
        <section>
            <h2>Experience</h2>
            {{#each experience}}
            <div class="section-item {{#if current}}current{{/if}}">
                <div class="section-title">
                    <h3>{{title}} at {{company}}</h3>
                    <div class="item-duration">
                        {{#formatDate from}} {{/formatDate}}
                        {{#if to}} - {{#formatDate to}} {{/formatDate}}
                        {{else}} - Present{{/if}}
                    </div>
                </div>
                {{#if location}}
                <p class="item-location">{{location}} | {{type}}</p>
                {{/if}}
                {{#if description}}
                <p>{{description}}</p>
                {{/if}}
            </div>
            {{/each}}
        </section>
        {{/if}}

        {{#if education.length}}
        <section>
            <h2>Education</h2>
            {{#each education}}
            <div class="section-item {{#if current}}current{{/if}}">
                <div class="section-title">
                    <h3>{{degree}} in {{fieldOfStudy}}</h3>
                    <div class="item-duration">
                        {{#formatDate from}} {{/formatDate}}
                        {{#if to}} - {{#formatDate to}} {{/formatDate}}
                        {{else}} - Present{{/if}}
                    </div>
                </div>
                <p class="emphasis">{{school}}</p>
                {{#if location}}
                <p class="item-location">{{location}}</p>
                {{/if}}
                {{#if description}}
                <p>{{description}}</p>
                {{/if}}
            </div>
            {{/each}}
        </section>
        {{/if}}

        {{#if projects.length}}
        <section>
            <h2>Projects</h2>
            {{#each projects}}
            <div class="section-item">
                <div class="section-title">
                    <h3>{{title}}</h3>
                    {{#if from}}
                    <div class="item-duration">
                        {{#formatDate from}} {{/formatDate}}
                        {{#if to}} - {{#formatDate to}} {{/formatDate}}
                        {{else}} - Present{{/if}}
                    </div>
                    {{/if}}
                </div>
                {{#if description}}
                <p>{{description}}</p>
                {{/if}}
                {{#if technologies.length}}
                <div class="project-technologies">
                    {{#each technologies}}
                    <span class="tech-tag">{{this}}</span>
                    {{/each}}
                </div>
                {{/if}}
                <div>
                    {{#if githubUrl}}
                    <a href="{{githubUrl}}" target="_blank">GitHub</a>
                    {{/if}}
                    {{#if liveUrl}}
                    {{#if githubUrl}} | {{/if}}
                    <a href="{{liveUrl}}" target="_blank">Live Demo</a>
                    {{/if}}
                </div>
            </div>
            {{/each}}
        </section>
        {{/if}}

        {{#if skills.length}}
        <section>
            <h2>Skills</h2>
            <div class="skills-container">
                {{#each skills}}
                <div class="skill-item {{category}}">
                    {{name}} {{#if level}}({{level}}/5){{/if}}
                </div>
                {{/each}}
            </div>
        </section>
        {{/if}}

        {{#if languages.length}}
        <section>
            <h2>Languages</h2>
            {{#each languages}}
            <div class="language-item">
                <span class="language-name">{{name}}:</span>
                <span class="language-level">{{proficiency}}</span>
            </div>
            {{/each}}
        </section>
        {{/if}}

        <footer>
            <p>Generated with StudFolio &bull; {{currentDate}}</p>
        </footer>
    </div>
</body>
</html>
